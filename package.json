{
  "name": "shopping-list",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "worker"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w frontend",
    "dev:worker": "npm run dev -w worker",
    "build": "npm run build:frontend && npm run build:worker",
    "build:frontend": "npm run build -w frontend",
    "build:worker": "npm run build -w worker",
    "lint": "npm run lint -w frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
